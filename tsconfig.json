{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "pretty": true,
    "types": ["vitest/globals", "@testing-library/jest-dom", "@types/chrome"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "chromeExt", "dist"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "typedocOptions": {
    "entryPointStrategy": "expand",
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
