{
    "name": "Browser Extension project",
    "description": "browser extension assessment",
    "version": "0.5.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "./src/background.js"
    },
    "action": {
        "default_popup": "./index.html"
    },
    "options_page": "options.html",
    "content_scripts": [{
        "matches": [ "http://*/*", "https://*/*"],
        "js": ["./src/content.js"]
    }], 
    "permissions": [
        "activeTab",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://www.google.com/*"
    ]
}